doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Equipment Reservation Form
  style.
    body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background: #f4f4f4;
    }
    header {
    background-color: #2c3e50;
    padding: 20px;
    text-align: center;
    color: #fff;
    }
    form {
    max-width: 600px;
    margin: 20px auto;
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    ul {
    list-style: none;
    padding: 0;
    }
    li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    }
    label {
    flex: 1;
    }
    input, select {
    margin-left: 10px;
    width: 60%; /* Adjust the width as needed */
    padding: 8px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
    }
    button {
    background-color: #4caf50;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }
    button:hover {
    background-color: #45a049;
    }
header
  h1 Equipment Reservation Form
form(action='admin.php', method='post', onsubmit='submitF()')
  ul
    li
      label(for='computer') Computer
      input#computer(type='checkbox', name='Computer', value='Computer')
    li
      label(for='oscilloscope') Oscilloscope
      input#oscilloscope(type='checkbox', name='Oscilloscope', value='Oscilloscope')
    li
      label(for='wifi') Wi-Fi
      input#wifi(type='checkbox', name='Wi-Fi', value='Wi-Fi')
    li
      label(for='printer') Printer
      input#printer(type='checkbox', name='Printer', value='Printer')
    li
      label(for='projector') Projector
      input#projector(type='checkbox', name='Projector', value='Projector')
    li
      label(for='router') Router
      input#router(type='checkbox', name='Router', value='Router')
    li
      label(for='switch') Switch
      input#switch(type='checkbox', name='Switch', value='Switch')
    li
      label(for='scanner') Scanner
      input#scanner(type='checkbox', name='Scanner', value='Scanner')
    li
      label(for='hdd') HDD
      input#hdd(type='checkbox', name='HDD', value='HDD')
    li
      label(for='board') Board
      input#board(type='checkbox', name='Board', value='Board')
  li
    label(for='reservation_time') Reservation Time:
    select#reservation_time(name='reservation_time', required='')
      option(value='morning') Morning
      option(value='afternoon') Afternoon
      option(value='evening') Evening
  button(type='submit') Submit
